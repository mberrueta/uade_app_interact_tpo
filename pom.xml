<project 
  xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.uade.appl_interact</groupId>
  <artifactId>tpo</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>tpo</name>
  <url>http://maven.apache.org</url>
  <scm>
    <connection>scm:git:https://github.com/mberrueta/uade_app_interact_tpo.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/mberrueta/uade_app_interact_tpo.git</developerConnection>
    <url>https://github.com/mberrueta/uade_app_interact_tpo/</url>
  </scm>
  <developers>
    <developer>
      <id>matt</id>
      <name>Matias Berrueta</name>
      <email>matiasberrueta@gmail.com</email>
      <roles>
        <role>Java Developer :S</role>
      </roles>
      <timezone>-3</timezone>
    </developer>
    <developer>
      <id></id>
      <name>ccc</name>
      <email>ccc@gmail.com</email>
      <roles>
        <role>Java Developer </role>
      </roles>
      <timezone>-3</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>Apache License 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>5.0.5</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.17</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.12.4</version>
        <configuration>
          <includes>
            <include>**/*Test*.java</include>
          </includes>
          <environmentVariables>
            <JDBC_DATABASE_URL>jdbc:mysql://localhost:3306/app_interact_tpo</JDBC_DATABASE_URL>
            <JDBC_DATABASE_USER>tpo</JDBC_DATABASE_USER>
            <JDBC_DATABASE_PASS>secret</JDBC_DATABASE_PASS>
          </environmentVariables>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.8.1</version>
        <configuration>
          <includes>
            <include>**/*Spec.*</include>
            <include>**/*Test.*</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>sql-maven-plugin</artifactId>
        <version>1.5</version>
        <dependencies>
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.0.5</version>
          </dependency>
          <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.5</version>
          </dependency>

        </dependencies>
        <configuration>
          <url>jdbc:mysql://localhost:3306/app_interact_tpo</url>
          <driver>com.mysql.jdbc.Driver</driver>
          <username>tpo</username>
          <password>secret</password>
        </configuration>
        <executions>
          <execution>
            <id>create-schema</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <srcFiles>
                <srcFile>resources/db/schema.sql</srcFile>
              </srcFiles>
              <onError>continue</onError>
            </configuration>
          </execution>
          <execution>
           <id>seed</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <srcFiles>
                <srcFile>resources/db/seed.sql</srcFile>
              </srcFiles>
              <onError>continue</onError>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
